SELECT *, (SELECT COUNT(*) FROM todos WHERE list_id = l.id) AS "total todos",
          (SELECT COUNT(*) FROM todos WHERE list_id = l.id AND completed = 't') AS "todos_completed"
FROM lists l;

SELECT l.*, COUNT(completed) AS "total_todos"
FROM lists l
JOIN todos t ON l.id = t.list_id
GROUP BY l.name, l.id;


